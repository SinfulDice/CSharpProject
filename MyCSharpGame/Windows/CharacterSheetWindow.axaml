<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MyCSharpGame.Windows.CharacterSheetWindow"
             Background="#1e1e1e"
             Foreground="#e0e0e0">
    
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="SemiBold"/>
        </Style>
        <Style Selector="Border.Card">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        <Style Selector="TextBlock.Header">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFD700"/> </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="60, *">
        
        <Border Grid.Row="0" Background="#252525" BorderBrush="#333" BorderThickness="0,0,0,2">
            <Grid ColumnDefinitions="*, *">
                <Button Grid.Column="0" Name="SaveQuitButton" Click="SaveQuitButton_OnClick"
                        Margin="10" Padding="20,5" Background="#4a1515" HotKey="Escape">
                    <TextBlock Text="Sauvegarder &amp; Quitter" Foreground="White"/>
                </Button>
                <Button Grid.Column="1" Name="SettingButton" Click="SettingButton_OnClick"
                        Margin="10" Padding="20,5" HorizontalAlignment="Right">
                    <TextBlock Text="Paramètres"/>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="15" ColumnDefinitions="280, *" RowDefinitions="300, *">
            
            <Border Grid.Column="0" Grid.Row="0" Classes="Card">
                <Panel>
                    <Image Source="avares://MyCSharpGame/assets/Default.png" 
                           Margin="5" Stretch="UniformToFill" ClipToBounds="True">
                        
                    </Image>
                </Panel>
            </Border>

            <Grid Grid.Column="1" Grid.Row="0" RowDefinitions="Auto, *">
                <Border Grid.Row="0" Classes="Card" Background="#3d3d3d" Height="40">
                    <Grid ColumnDefinitions="*, Auto">
                        <TextBlock Grid.Column="0" Name="Name" Text="Nom : Inconnu" 
                                   Margin="15,0" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Lvl 1 - 0 XP" 
                                   Margin="15,0" Foreground="#aaa"/>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" ColumnDefinitions="*, *">
                    <Border Grid.Column="0" Classes="Card">
                        <StackPanel Margin="12" Spacing="8">
                            <TextBlock Name="Height" Text="Taille : "/>
                            <TextBlock Name="Weight" Text="Poids : "/>
                            <TextBlock Name="Age" Text="Âge : "/>
                            <TextBlock Name="Race" Text="Race : "/>
                            <TextBlock Name="Class" Text="Classe : "/>
                            <TextBlock Name="Speed" Text="Vitesse : "/>
                            <Separator Background="#444"/>
                            <TextBlock Name="MaxHitPoint" Text="Points de Vie Max :" 
                                       Foreground="#ff4d4d" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Classes="Card" BorderBrush="#FFD700" BorderThickness="0.5">
                        <StackPanel Margin="12" Spacing="10">
                            <TextBlock Classes="Header" Text="ATTRIBUTS" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Name="STRTextBlock" Text="Force : "/>
                            <TextBlock Name="DEXTextBlock" Text="Dextérité : "/>
                            <TextBlock Name="CONTextBlock" Text="Constitution : "/>
                            <TextBlock Name="INTTextBlock" Text="Intelligence : "/>
                            <TextBlock Name="WISTextBlock" Text="Sagesse : "/>
                            <TextBlock Name="CHATextBlock" Text="Charisme : "/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <Border Grid.Row="1" Grid.Column="0" Classes="Card">
                <DockPanel Margin="10">
                    <TextBlock DockPanel.Dock="Top" Text="INVENTAIRE" Classes="Header" Margin="0,0,0,10"/>
                    <ScrollViewer>
                        <TextBlock Name="Inventory" Text="Objets..." TextWrapping="Wrap" Foreground="#bbb"/>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="*, *">
                <Border Grid.Row="0" Classes="Card">
                    <Grid ColumnDefinitions="*, 1, *">
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="COMBAT" Classes="Header" FontSize="12"/>
                            <TextBlock Name="CombatInventory" Text="Armes..." TextWrapping="Wrap" FontSize="13"/>
                        </StackPanel>
                        <Rectangle Grid.Column="1" Fill="#444" Width="1" Margin="0,10"/>
                        <StackPanel Grid.Column="2" Margin="10">
                            <TextBlock Text="QUÊTES" Classes="Header" FontSize="12"/>
                            <TextBlock Name="QuestInventory" Text="Objets de quête..." TextWrapping="Wrap" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Classes="Card">
                    <DockPanel Margin="10">
                        <TextBlock DockPanel.Dock="Top" Text="COMPÉTENCES" Classes="Header" Margin="0,0,0,5"/>
                        <ScrollViewer>
                            <TextBlock Name="Skills" Text="Liste des talents..." TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>