<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MyCSharpGame.Windows.ClassWindow">
        
        <UserControl.Styles>
                <Style Selector="Button">
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                </Style>
                
                <Style Selector="TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                </Style>
        </UserControl.Styles>
        
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="25">
            Choose the class of your character.
        </TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="BarbarianTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="BarbarianClass"
                            Click="BarbarianClass_OnClick"
                            Content="Barbarian">
                    </Button>
            </Grid>
                
            <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="BardTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="BardClass"
                            Click="BardClass_OnClick"
                            Content="Bard">
                    </Button>
            </Grid>    
            
            <Grid Grid.Column="2" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="ClericTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="ClericClass"
                            Click="ClericClass_OnClick"
                            Content="Cleric">
                    </Button>
            </Grid>    
            
            <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="DruidTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="DruidClass"
                            Click="DruidClass_OnClick"
                            Content="Druid">
                    </Button> 
            </Grid>    
            
            <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="FighterTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="Fighter"
                            Click="Fighter_OnClick"
                            Content="Fighter">
                    </Button>
            </Grid>    
            
            <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="MonkTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="MonkClass"
                            Click="MonkClass_OnClick"
                            Content="Monk">
                    </Button>
            </Grid>    
            
            <Grid Grid.Column="0" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="RogueTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="RogueClass"
                            Click="RogueClass_OnClick"
                            Content="Rogue">
                    </Button>
            </Grid>    
            
            <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="WizardTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="WizardClass"
                            Click="WizardClass_OnClick"
                            Content="Wizard">
                    </Button>
            </Grid>    
            
            <Grid Grid.Column="2" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Name="ArtificerTextBlock"
                               Text=""/>
                    
                    <Button Grid.Column="1"
                            Name="Artificer"
                            Click="Artificer_OnClick"
                            Content="Artificer">
                    </Button>
            </Grid>    
            
        </Grid>
    </Grid>
</UserControl>
